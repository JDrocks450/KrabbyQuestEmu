<Page x:Class="KrabbyQuestTools.Pages.GalleryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KrabbyQuestTools.Pages"
      xmlns:controls="clr-namespace:KrabbyQuestTools.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Gallery Viewer" Background="#FF252525">

    <Grid>
        <TextBlock Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" FontWeight="Bold">Gallery Viewer</TextBlock>
        <DockPanel Margin="10,60,10,10">
            <Border DockPanel.Dock="Right" Width="250" Margin="5,0,0,0" Background="#FF323232" BorderBrush="#FF6E6E6E" BorderThickness="1">
                <StackPanel x:Name="AssetInfoStack">
                    <TextBlock x:Name="assetInfoLabel" FontWeight="Bold" Margin="10,10">Asset Info</TextBlock>
                </StackPanel>
            </Border>
            <controls:Gallery x:Name="Gallery" Margin="0,0,5,0"/>
        </DockPanel>
        
    </Grid>
</Page>
