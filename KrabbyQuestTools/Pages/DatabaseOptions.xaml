<Page x:Class="KrabbyQuestTools.Pages.DatabaseOptions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KrabbyQuestTools.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Database Options" Background="#FF1F1F1F" >

    <StackPanel Margin="10">
        <TextBlock>
            DB Command:
        </TextBlock>
        <TextBox x:Name="CommandBox"></TextBox>
        <Button x:Name="ListButton" Margin="0,5,0,0" Height="25" Click="ListButton_Click">LIST Functions</Button>
        <TextBlock Margin="0,10,0,0">
            Game Emulator Asset Folder Path:            
        </TextBlock>
        <TextBox x:Name="GamePathBox">
            C:\Users\xXJDr\source\repos\KrabbyQuestTools\Krabby Quest Game\Assets\Resources
        </TextBox>
        <Button x:Name="PushButton" Margin="0,10,0,0" Height="30" Click="PushButton_Click">
            PUSH Changes
        </Button>
        <Button x:Name="CancelButton" Margin="0,5,0,0" Height="25" Click="CancelButton_Click">
            CANCEL Changes
        </Button>
    </StackPanel>
</Page>
